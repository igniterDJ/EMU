.MODEL SMALL
.DATA
A1 DW 010H,020H,030H,040H
LEN DW (LEN-A1)/2 
KEY DW 30H
M1 DB 'KEY FOUND AT '
RES DB ?
M3 DB ' POSITION $'
M2 DB 'KEY NOT FOUND $'

.CODE
MOV AX,@DATA 
MOV DS,AX
MOV BX,01
MOV DX,LEN
MOV CX,KEY
L2:CMP BX,DX 
 JA FAIL
 MOV AX,BX 
 ADD AX,DX
 SHR AX,01
MOV SI,AX
 DEC SI
 ADD SI,SI
 CMP CX,A1[SI]
 JAE L1
 MOV DX,AX 
 DEC DX
 JMP L2
L1: JE SUCCESS
 MOV BX,AX 
 INC BX
 JMP L2
FAIL:LEA DX,M2
 JMP L3
SUCCESS: ADD AX,30H 
 MOV RES,AL
 LEA DX,M1
L3: MOV AH,09H 
 INT 21H
 MOV AH,04CH 
 INT 21H
 END
